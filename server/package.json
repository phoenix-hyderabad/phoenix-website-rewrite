{
    "name": "server",
    "type": "module",
    "version": "1.0.0",
    "description": "Phoenix assoc website backend",
    "lint-staged": {
        "*.{ts}": [
            "eslint --quiet --fix"
        ],
        "*.{json,js,ts}": [
            "prettier --write --ignore-unknown"
        ]
    },
    "scripts": {
        "start": "vite-node src/bin/index.ts",
        "eslint:fix": "eslint --quiet --fix",
        "watch": "nodemon --exec \"npm run start\" --watch src --ext ts",
        "format": "prettier --ignore-unknown --write src",
        "db:push": "drizzle-kit push",
        "db:studio": "drizzle-kit studio",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "lint-staged": "lint-staged",
        "prepare": "cd .. && husky server/.husky"
    },
    "dependencies": {
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "drizzle-orm": "^0.33.0",
        "express": "^4.19.2",
        "express-rate-limit": "^7.4.0",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "module-alias": "^2.2.3",
        "pg": "^8.12.0",
        "redis": "^4.7.0",
        "vite-node": "^2.0.5",
        "winston": "^3.14.2",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/express-rate-limit": "^6.0.0",
        "@types/helmet": "^4.0.0",
        "@types/jest": "^29.5.7",
        "@types/node": "^20.8.10",
        "@types/pg": "^8.11.8",
        "@types/redis": "^4.0.11",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^8.9.0",
        "drizzle-kit": "^0.24.2",
        "eslint": "^9.12.0",
        "eslint-plugin-drizzle": "^0.2.3",
        "husky": "^9.1.6",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.10",
        "nodemon": "^3.0.1",
        "prettier": "^3.3.3",
        "rimraf": "^5.0.5",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2"
    },
    "_moduleAliases": {
        "@": "dist"
    },
    "engines": {
        "node": ">=19.9.0"
    }
}
